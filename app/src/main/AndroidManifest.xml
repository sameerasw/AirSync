<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <!-- Required for Foreground Services on Android 13 (API 33) and above for the service's own notification -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS"/>
    <!-- For Notification Listener Service -->
    <uses-permission android:name="android.permission.BIND_NOTIFICATION_LISTENER_SERVICE"
        tools:ignore="ProtectedPermissions" />
    <!-- General permission for running any foreground service -->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <!-- Remove: <uses-permission android:name="android.permission.FOREGROUND_SERVICE_DATA_SYNC" /> -->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_DATA_SYNC" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AirSync"
    tools:targetApi="31">
    <activity
        android:name=".MainActivity"
        android:exported="true"
        android:label="@string/app_name"
        android:theme="@style/Theme.AirSync"> <!-- Make sure your theme name is correct -->
        <intent-filter>
            <action android:name="android.intent.action.MAIN" />
            <category android:name="android.intent.category.LAUNCHER" />
        </intent-filter>
    </activity>

    <!-- Declare the Notification Listener Service -->
    <service
        android:name=".MyNotificationListener"
        android:label="@string/notification_listener_service_label"
        android:permission="android.permission.BIND_NOTIFICATION_LISTENER_SERVICE"
        android:exported="true"> <!-- For system to bind, exported should be true with BIND_NOTIFICATION_LISTENER_SERVICE permission -->
        <intent-filter>
            <action android:name="android.service.notification.NotificationListenerService" />
        </intent-filter>
    </service>

    <!-- Declare the Foreground Service for Networking -->
    <service
        android:name=".NotificationForwardingService"
        android:exported="false"
        android:foregroundServiceType="dataSync" />  <!-- <<< ADD THIS ATTRIBUTE HERE -->
</application>

    </manifest>